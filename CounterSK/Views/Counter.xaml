<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:CounterSK.ViewModels"
    x:Class="CounterSK.Views.Counter"
    x:DataType="viewModels:CounterViewModel">

    <Frame BorderColor="Gray" CornerRadius="12" Padding="10" Margin="5" WidthRequest="200">
        <VerticalStackLayout Spacing="8" HorizontalOptions="Center" >
            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="20">
                <Label Text="{Binding Name}" FontSize="20" HorizontalOptions="Center" Grid.Column="0"/>
                <Button Text="X" Command="{Binding DeleteCommand}" Grid.Column="1" TextColor="Red" Background="Transparent"/>
            </Grid>
            <Label Text="{Binding Value}" FontSize="32" HorizontalOptions="Center" />
            <HorizontalStackLayout Spacing="10">
                <Button Text="â€“" Command="{Binding DecrementCommand}" />
                <Button Text="+" Command="{Binding IncrementCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>
